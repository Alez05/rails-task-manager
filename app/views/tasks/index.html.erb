<div class="container mt-4">
  <h1 class="mb-4">📝 My Tasks for the Day</h1>

  <div class="list-group">
    <% @tasks.each do |task| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <input type="checkbox"  <%= "checked" if task.completed %> class="form-check-input me-2">
          <%= link_to task.title, task_path(task), class: "text-decoration-none fw-bold" %>
        </div>
        <div>
          <%= link_to delete_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" do %>
        <i class="fa-solid fa-trash"></i> Delete
      <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "+ Add a new task", new_task_path, class: "btn btn-success" %>
  </div>
</div>
